{
  "name": "shopify-storefront-api-explorer",
  "author": "@erikdstock",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "dev": "next dev",
    "build:gql": "graphql-codegen",
    "build": "npm run build:gql && next build",
    "start": "next start",
    "type-check": "tsc --pretty --noEmit",
    "format": "prettier --write \"**/*.{js,ts,tsx}\"",
    "lint": "eslint . --ext ts --ext tsx --ext js",
    "test": "jest",
    "test-all": "npm run lint && npm run type-check && npm run test"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn run type-check"
    }
  },
  "lint-staged": {
    "*.@(ts|tsx)": [
      "yarn lint",
      "yarn format"
    ]
  },
  "dependencies": {
    "@sentry/node": "5.21.1",
    "crypto": "1.0.1",
    "graphiql": "1.0.3",
    "graphql": "15.3.0",
    "http-status-codes": "1.4.0",
    "isomorphic-fetch": "2.2.1",
    "next": "9.5.1",
    "nonce": "1.0.4",
    "option-t": "22.4.3",
    "querystring": "0.2.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "safe-compare": "1.1.4"
  },
  "devDependencies": {
    "@graphql-codegen/cli": "1.17.7",
    "@graphql-codegen/typescript": "1.17.8",
    "@graphql-codegen/typescript-graphql-request": "3.2.2",
    "@graphql-codegen/typescript-operations": "1.17.7",
    "@sentry/webpack-plugin": "1.12.0",
    "@testing-library/react": "^10.0.1",
    "@types/isomorphic-fetch": "0.0.35",
    "@types/jest": "^26.0.9",
    "@types/node": "^14.0.27",
    "@types/react": "^16.9.45",
    "@types/safe-compare": "1.1.0",
    "@types/testing-library__react": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^2.25.0",
    "@typescript-eslint/parser": "^2.25.0",
    "babel-jest": "^26.2.2",
    "eslint": "^7.7.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-plugin-react": "^7.20.6",
    "jest": "^26.2.2",
    "jest-watch-typeahead": "^0.5.0",
    "lint-staged": "^10.0.10",
    "nock": "13.0.4",
    "prettier": "^2.0.2",
    "typescript": "^3.8.3"
  }
}
